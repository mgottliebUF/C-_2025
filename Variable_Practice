#include <iostream>
using namespace std;

int main() {

int number_books = 5;
int number_pages = 56;
cout << "Number of books: " << number_books << endl;
cout << "Number of pages: " << number_pages << endl;
cout << "Total number of books and pages: " << number_books + number_pages << endl;

cout << "New Book" << endl;


number_books = number_books + 1 

cout << "New number of books: " << number_books << endl; 
return 0;
}

